<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingRight="10dp"
        android:layout_marginRight="4dp"
        android:backgroundTint="#AED7FC"
        android:background="@drawable/ingredient">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/text_ingredient"
                android:text="Hello"
                android:layout_marginRight="2dp"
                android:textSize="14dp"
                android:textColor="#353332"
                android:textStyle="italic"
                android:gravity="center" />

            <Button
                android:id="@+id/btn_close"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_gravity="right"
                android:background="@drawable/close"
                android:drawableTop="@drawable/ic_baseline_delete_16"
                android:drawableTint="#FFFFFF"
                android:padding="0dp"
                android:text="Close"
                android:textSize="8dp"
                app:backgroundTint="@color/main_drinks" />
        </TableRow>

    </LinearLayout>

</RelativeLayout>